{
  "compilerOptions": {
    "target": "es5",                   // 目标 ECMAScript 版本
    "module": "commonjs",              // 模块系统
    "strict": true,                    // 启用所有严格类型检查选项
    "esModuleInterop": true,           // 允许对CommonJS和ES模块之间的互操作性
    "skipLibCheck": false,              // 跳过库文件的类型检查
    "forceConsistentCasingInFileNames": true,  // 强制在文件名大小写匹配方面保持一致
    "outDir": "./dist",                // 指定输出目录
    "rootDir": "./src",                // 指定输入文件的根目录
    "lib": ["es2015", "dom"],           // 指定目标库，添加 es2015 和 dom
    "declaration": true,
    "declarationDir": "./dist",
  }, 
  "include": [
    "src/**/*.ts",                      // 包含 src 目录下的所有 TypeScript 文件
  ]
}